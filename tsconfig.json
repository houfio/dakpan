{
  "compilerOptions": {
    "target": "es6",
    "module": "esnext",
    "jsx": "react",
    "rootDir": "./src",
    "outDir": "./lib",
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,
    "declarationDir": ".",
    "skipLibCheck": true,
    "strict": true,
    "moduleResolution": "node"
  },
  "include": [
    "src"
  ],
  "exclude": [
    "lib",
    "node_modules"
  ]
}
