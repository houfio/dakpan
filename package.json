{
  "name": "dakpan",
  "version": "2.0.2",
  "description": "A tiny React state management library using hooks.",
  "main": "lib/index.js",
  "module": "lib/index.es.js",
  "types": "lib/index.d.ts",
  "scripts": {
    "prebuild": "npm run lint && npm run test && npm run clean",
    "build": "rollup -c",
    "test": "jest",
    "lint": "tslint \"src/**/*.ts?(x)\"",
    "clean": "rimraf lib/",
    "prepublishOnly": "npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/houfio/dakpan.git"
  },
  "keywords": [
    "react",
    "context",
    "state",
    "hooks"
  ],
  "files": [
    "src/",
    "lib/"
  ],
  "author": "houfio",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/houfio/dakpan/issues"
  },
  "homepage": "https://github.com/houfio/dakpan#readme",
  "peerDependencies": {
    "react": "^16.8.0"
  },
  "devDependencies": {
    "@types/jest": "^24.0.6",
    "@types/react": "^16.8.4",
    "jest": "^24.1.0",
    "react": "^16.8.3",
    "react-dom": "^16.8.3",
    "react-testing-library": "^6.0.0",
    "rimraf": "^2.6.3",
    "rollup": "^1.2.3",
    "rollup-plugin-commonjs": "^9.2.1",
    "rollup-plugin-filesize": "^6.0.1",
    "rollup-plugin-node-resolve": "^4.0.1",
    "rollup-plugin-typescript2": "^0.19.2",
    "ts-jest": "^24.0.0",
    "tslint": "^5.13.0",
    "tslint-react": "^3.6.0",
    "typescript": "^3.3.3333"
  },
  "jest": {
    "setupFilesAfterEnv": [
      "react-testing-library/cleanup-after-each.js"
    ],
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testMatch": [
      "<rootDir>/tests/**/?(*.)test.ts?(x)"
    ],
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ]
  }
}
